{
  // Editor settings
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "'CaskaydiaCove NF', Consolas, 'Courier New', monospace",
  // File settings
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "files.encoding": "utf8",
  //Git
  "git.autofetch": true,
  //Terminal
  "terminal.integrated.enableMultiLinePasteWarning": false,
  // PowerShell extension settings
  "powershell.codeFormatting.preset": "OTBS",
  "powershell.codeFormatting.alignPropertyValuePairs": true,
  "powershell.codeFormatting.whitespaceInsideBrace": true,
  "powershell.codeFormatting.whitespaceBeforeOpenParen": true,
  "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
  "powershell.codeFormatting.whitespaceAroundOperator": true,
  "powershell.codeFormatting.whitespaceAfterSeparator": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  //"powershell.scriptAnalysis.settingsPath": "./PSScriptAnalyzerSettings.psd1",
  //"csharp.suppressDotnetRestoreNotification": true,
  //"omnisharp.enableMsBuildLoadProjectsOnDemand": true,
  "powershell.codeFormatting.addWhitespaceAroundPipe": true,
  //File extension specfic settings
  "[markdown]": {
    //Enabling trailing whitespaces breaks hard line breaks in markdown. For that reason it is disabled.
    "files.trimTrailingWhitespace": false
  },
  "[powershell]": {
    "editor.rulers": [
      //Represents long code line in PowerShell files
      120
    ]
  },
  "[terraform]": {
    "editor.rulers": [
      //Represents long code line in Terraform files
      120
    ]
  }
}
